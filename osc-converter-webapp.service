[Unit]
Description=OSC Converter WebApp
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/osc-converter-webapp
ExecStart=/opt/osc-converter-webapp/venv/bin/gunicorn --bind 0.0.0.0:8000 --workers 1 osc_converter.wsgi:application
Restart=always
RestartSec=5
Environment="DJANGO_SETTINGS_MODULE=osc_converter.settings"

[Install]
WantedBy=multi-user.target
